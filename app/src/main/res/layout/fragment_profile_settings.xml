<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aroundme.around.controllers.ProfileSettingsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/fraggy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_name"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:id="@+id/editPic" />
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Sruti Guhathakurta"
                android:gravity="center"
                android:textSize="25sp"
                android:id="@+id/full_name_text"
                android:textColor="@color/Header"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
            <Spinner
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:id="@+id/status_spinner">
            </Spinner>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:id="@+id/status_enter">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter Status"
                    android:layout_weight="0.75"
                    android:id="@+id/status"
                    android:textColor="@color/text"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:layout_weight="0.25"
                    android:id="@+id/enter_status"
                    android:onClick="enterStatus"
                    android:background="@color/button"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/activity_vertical_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="University:"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Georgia Institute of Technology"
                    android:textSize="15sp"
                    android:id="@+id/universityTV"
                    android:textColor="@color/text"
                    />
            </LinearLayout>


            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="My description goes here..."
                android:textSize="15sp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:id="@+id/descriptionTV"
                android:textColor="@color/text"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Interests:"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Running Coding Traveling Watching Netflix"
                android:textSize="15sp"
                android:id="@+id/interestsET"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/text"/>
            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/submitBT"
                android:background="@color/button"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/logoutBT"
                android:text="Logout"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"/>
        </LinearLayout>

    </ScrollView>




</FrameLayout>
