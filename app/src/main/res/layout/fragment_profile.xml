<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aroundme.around.controllers.ProfileFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/fraggy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_name"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Sruti Guhathakurta"
                android:gravity="center"
                android:textSize="25sp"
                android:id="@+id/full_name"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/Header"/>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/activity_vertical_margin">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_available" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:textSize="18dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="About User"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/Header"/>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginBottom="@dimen/activity_vertical_margin">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="University:"
                    android:layout_weight="0.3"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Georgia Institute of Technology"
                    android:layout_weight="0.7"
                    android:textColor="@color/text"/>
            </LinearLayout>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Hey! My name is blah and I come from blah and enjot blahing."
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/text"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Interests:"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Running Coding Traveling Watching Netflix"
                android:textColor="@color/text"/>
        </LinearLayout>


    </ScrollView>


</FrameLayout>
