<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aroundme.around.controllers.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/fraggy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/activity_vertical_margin">
            <ImageView
                android:id="@+id/picture"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_name"
                android:scaleType="fitCenter"
                android:layout_margin="@dimen/activity_vertical_margin"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sruti Guhathakurta"
                    android:textSize="25sp"
                    android:id="@+id/full_name"
                    android:textColor="@color/Header"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_empty"
                    android:background="@color/windowBackground"
                    android:paddingBottom="4dp"
                    android:id="@+id/star_ic"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_message_text"
                    android:id="@+id/message_user"
                    android:background="@color/windowBackground"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitCenter"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:weightSum="1">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/status_ic"
                    android:src="@drawable/ic_available"
                    android:scaleType="fitCenter"
                    android:layout_marginRight="15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:textSize="18dp"
                    android:id="@+id/status_text" />



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="About User"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/Header"/>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginBottom="@dimen/activity_vertical_margin">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="University:"
                    android:layout_weight="0.3"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Georgia Institute of Technology"
                    android:layout_weight="0.7"
                    android:textColor="@color/text"/>
            </LinearLayout>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Hey! My name is blah and I come from blah and enjot blahing."
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/text"
                />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Interests:"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Running Coding Traveling Watching Netflix"
                android:textColor="@color/text"
                android:id="@+id/interests"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="back"
                android:id="@+id/backButton"
                android:background="@color/button"/>
        </LinearLayout>


    </ScrollView>


</FrameLayout>
